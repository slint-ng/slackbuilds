# Maintainer: Jan Alexander Steffens (heftig) <heftig@archlinux.org>

# Included in Slint by Didier Spaier didieratslintdotfr

pkgname=libxml++5.0
pkgver=5.0.3
pkgrel=1slint

slackdesc="$pkgname (C++ bindings to libxml2)"
url="https://libxmlplusplus.github.io/libxmlplusplus/"
arch=(x86_64)
license=(LGPL)
depends=(
  gcc-libs
  libxml2
)
makedepends=(
  git
  meson
  mm-common
)
options=(nosrcpack)
source=("https://github.com/libxmlplusplus/libxmlplusplus/releases/download/5.0.3/libxml++-5.0.3.tar.xz")
docs=(AUTHORS COPYING NEWS README)
build() {
cd libxml++-5.0.3
./autogen.sh

CFLAGS="$SLKCFLAGS" \
CXXFLAGS="$SLKCFLAGS" \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --build=$ARCH-slackware-linux

make
make install DESTDIR=$PKG
}


# vim:set sw=2 sts=-1 et:
