#Packager: Didier Spaier didieratslintdotfr
pkgname=gksu
pkgver=15.0
pkgrel=1slint
arch=noarch
docs=("readme.md" "install" "copying" "changelog" "authors" "news" "todo")
options=('nosrcpack')

slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"gksu (only symlinks symlink of gnsu to gksu and gksudo)"
"This package prevent the replacement of these symlinks by the"
"gksu and gksudo binaries (not safe) if installing the \"real\""
"gksu from another source than  the Slint repository."
""
"So, do not replace this package by one coming from elsewhere"
)


doinst() {
	cd /usr/bin
	ln -sf gnsu gksu
	ln -sf gnsu gksudo
}

build() {
	mkdir -p $PKG/usr/bin
} 
