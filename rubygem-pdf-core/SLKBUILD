export _gemname=pdf-core
pkgname=rubygem-$_gemname
pkgver=0.9.0
pkgrel=2slint
slackdesc="$pkgname (used by Prawn to render PDF documents)"
url='http://prawn.majesticseacreature.com'
license=('custom:PRAWN' 'GPL2' 'GPL3')
depends=(ruby)
makedepends=(ruby-rdoc)
options=(nosrcpack)
