#Maintainer: Didier Spaier didieratslintdotfr

pkgname=latest-browsers
pkgver=2
pkgrel=4slint
arch=noarch
options=('noautodotnew' 'nosrcpack')
slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"latest-browsers (install/update to their latest version web browsers)"
"This package provides shells scripts written by Ruarí Ødegaard that"
"download, build and install or upgrade packages for the latest stable"
"version of web browsers Mozilla Firefox, Google Chrome and Vivaldi"
"and of the mail application Mozilla-Thunderbird."
""
"For usage and customization read /usr/doc/latest-browsers/README"
)
build() {
	execdir="$PKG/usr/libexec/latest-browsers"
	for i in latest-chrome latest-firefox latest-vivaldi; do
		install -D -m 755 -o root -g root -D $startdir/$i/${i}.sh $execdir/${i}.sh
	done
	install -D -m 755 -o root -g root -D $startdir/latest-thunderbird.sh $execdir/latest-thunderbird.sh
	( cd $execdir
	patch -p 0 --verbose < $startdir/stable_vivaldi_stream_only.patch || exit 1
	)
	install -m 755 -o root -g root -D $startdir/latest $PKG/usr/sbin/latest
	install -m 644 -o root -g root -D $startdir/README $PKG/usr/doc/latest-browsers/README

}
