# Included in Slint by Didier Spaier didieratslintdotfr
_pkgname=featherpad
pkgname=featherpad
pkgver=git836029e
pkgrel=1slint
slackdesc="$pkgname (lightweight Qt5 plain text editor for Linux)"
url='https://github.com/tsujan/FeatherPad'
license=('GPL3')
depends=('qt5-svg' 'qt5-x11extras' 'hunspell' 'desktop-file-utils' 'gtk-update-icon-cache')
makedepends=('git' 'qt5-tools')
optdepends=('qt5-translations: localized keyboard shortcuts')
provides=("$_pkgname")
conflicts=("$_pkgname")
#source=("$_pkgname::git+")
sha256sums=("SKIP")
docs=(COPYING README.md)
build() {
  git clone https://github.com/tsujan/FeatherPad.git
  cd FeatherPad
  git checkout 836029e
  qmake
  make
  make INSTALL_ROOT=$PKG install
}
