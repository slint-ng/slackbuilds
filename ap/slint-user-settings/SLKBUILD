# Packager: Didier Spaier didieratslintdotfr

pkgname=slint-user-settings
pkgver=15.0
pkgrel=8slint
arch=noarch
source=($pkgname.tar.xz)
options=('noautodotnew' 'nosrcpack')

slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"slint-user-settings (default user settings for Slint)"
"This includes a startup desktop file for the Orca screen reader."
)
build() {
	cd $startdir/src/$pkgname
	mkdir -p $PKG/etc
	cp -r etc/ $PKG/
	chown -R root: $PKG/etc
}
