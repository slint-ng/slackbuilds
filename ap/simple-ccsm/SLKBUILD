#Included in Slint by Didier Spaier didieratslintdotfr
pkgname=simple-ccsm
pkgver=0.8.18
pkgrel=1slint
slackdesc="$pkgname (Simple Compizconfig Settings Manager)"
docs=("copying" "authors" "README.html")
options=("nosrcpack")
url="http://www.compiz-fusion.org/"
license=('GPL')
depends=('python'
	'pygobject-devel')
makedepends=('intltool')
source=("https://gitlab.com/compiz/simple-ccsm/-/archive/v0.8.18/simple-ccsm-v0.8.18.tar.gz")
md5sums=('9943157db0527925b249a2efd4211a2d')

build()
{
	cd "${pkgname}-v${pkgver}"
[ -f README.md ] && pandoc -f gfm -t html5 -o README.html README.md
    python3 setup.py build --with-gtk=3.0 --prefix=/usr
	python3 ./setup.py install --prefix=/usr --root="${PKG}"
}
