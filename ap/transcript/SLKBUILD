#}

slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"$pkgname (Download the audio of a video and convert it to text)"
"For usage, read /usr/doc/transcript/README"
)


build() {
	mkdir -p $PKG/usr/bin $PKG/usr/libexec/transcript $PKG/usr/doc/transcript
	cp $startdir/setup_transcript $startdir/transcript_whisper.py $PKG/usr/libexec/transcript
	cp $startdir/transcript $PKG/usr/bin
	cp $startdir/README $PKG/usr/doc/transcript
	chmod 644 $PKG/usr/doc/transcript/README
	chmod -R 755 $PKG/usr/bin $PKG/usr/libexec/transcript
} 
