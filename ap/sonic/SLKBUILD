#Packager: Didier Spaier <didier~at~slint~dot~fr>

pkgname=sonic
pkgver=gite06dbb9
pkgrel=1slint
source=("README.Slint")
docs=("readme" "copying" "README.Slint")
options=("nosrcpack")

slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"$pkgname (Simple library to speed up or slow down speech)"
"Sonic is a simple algorithm for speeding up or slowing down speech."
""
"The primary motivation behind Sonic is to enable the blind and"
"visually impaired to improve their productivity with open source"
"speech engines, like espeak. Sonic can also be used by the sighted."
)
build() {
	git clone https://github.com/waywardgeek/sonic.git
	cd sonic
	git checkout e06dbb9
	make
	make install DESTDIR=$PKG
	rm -f $PKG/usr/lib64/*.la
	mkdir -p $PKG/usr/man/man1
	mv $PKG/usr/lib $PKG/usr/lib64
	cp sonic.1 $PKG/usr/man/man1/
	mkdir -p $PKG/usr/doc/${pkgname}-${pkgver}
	cp -r samples $PKG/usr/doc/${pkgname}-${pkgver}
	cp doc/sonic.odt $PKG/usr/doc/${pkgname}-${pkgver}
}
