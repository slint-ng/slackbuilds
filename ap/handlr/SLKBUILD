# Contributor: ftilde <ftilde at tamepointer dot tld for germany>
# Included in Slint by Didier Spaier didieratslintdotfr

pkgname=handlr
pkgver=0.6.4
pkgrel=1slint
slackdesc="$pkgname (powerful alternative to xdg-utils written in Rust)"
arch=('x86_64')
url="https://github.com/chmln/handlr"
license=('MIT')
depends=('shared-mime-info')
makedepends=('cargo')
commit="0e62d1dfa34de844369667a387ba213fe2c1649c.patch"
source=("$url/archive/v$pkgver.tar.gz"
        "$url/commit/0e62d1dfa34de844369667a387ba213fe2c1649c.patch")
sha512sums=('55779ad0c01e065678e1a57f338272f1d38057658fe6b7c54f7bc35595575aafe13aed6ca3d80cc65b912971aac9a2a6c78ac5512315af9f2d676a92c8c395ec'
            '904334cc85286fdfab8f394877d57f7bc8b2bda9a46f6d355b9f3f9ffa1b52a8da8524db5844c975212c4709774e4dfd3e1e75df78cb9eaadc6a32c5d0c101d2')
options=("nosrcpack")

build() {
  cd "$pkgname-$pkgver"
  patch -Np1 -i "$SRC/0e62d1dfa34de844369667a387ba213fe2c1649c.patch" || exit 1
  cargo fetch --locked --target "x86_64-unknown-linux-gnu"
  cargo build --release --frozen
  install -Dm 755 "target/release/$pkgname" -t "$PKG/usr/bin"
  install -Dm 644 README.md -t "$PKG/usr/doc/$pkgname-$pkgver"
  install -Dm 644 LICENSE -t "$PKG/usr/doc/$pkgname-$pkgver"
  install -Dm 644 "completions/$pkgname" -t "$PKG/usr/share/bash-completion/completions"
  install -Dm 644 "completions/$pkgname.fish" -t "$PKG/usr/share/fish/vendor_completions.d"
  install -Dm 644 "completions/_$pkgname" -t "$PKG/usr/share/zsh/site-functions"
}

