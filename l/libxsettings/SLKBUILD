# SLKBUILD for libXsettings‑client

pkgname=libxsettings
pkgver=1.2.1
pkgrel=1
arch="x86_64"
pkgdesc="X11 XSettings client library"
url="https://gitlab.freedesktop.org/xorg/lib/libxsettings"
license=("MIT")

# sources: tarball URL
source=("https://gitlab.freedesktop.org/xorg/lib/${pkgname}/-/archive/${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha256sums=("INSERT_REAL_SHA256_HERE")

# build options
options=()
# dotnew=()   # si des fichiers de configuration dans /etc

build() {
    cd "$srcdir/${pkgname}-${pkgver}"
    ./autogen.sh --prefix=/usr \
                 --disable-static \
                 --enable-shared
    make -j$(nproc)
}

package() {
    cd "$srcdir/${pkgname}-${pkgver}"
    make DESTDIR="$pkgdir" install

    # nettoyage ou ajustements éventuels :
    # e.g., strip binaries, fix permissions, déplacer man/info pages
}

# dépendances et fournitures : si nécessaires
depends=()
makedepends=()
provides=("$pkgname")
replaces=()

# fin du SLKBUILD
