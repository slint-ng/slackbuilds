build() {
  cd "$SRC/$_srcname-$pkgver" || exit 1
  sed -i -e "s/version=__import__('pyautogui').__version__,/version='${pkgver}',/" \
    setup.py

  python3.9 setup.py install --root="$PKG"
  python3.11 setup.py install --root="$PKG"
}
