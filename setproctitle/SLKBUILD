#Included in Slint by Didier Spaier didieratslintdotfr

pkgname=setproctitle
pkgver=1.3.3
pkgrel=1slint
export srcnam="py-setproctitle-version"
slackdesc="$pkgname (allows a python process to change its process title)"
license=("BSD")
url="https://github.com/dvarrazzo/py-setproctitle"
depends=('python')
makedepends=(python-setuptools python-wheel python-build python-installer)
checkdepends=('python-pytest' 'procps-ng')
arch=('x86_64')
source=(https://files.pythonhosted.org/packages/source/s/setproctitle/setproctitle-$pkgver.tar.gz)
sha256sums=('b9fb97907c830d260fa0658ed58afd48a86b2b88aac521135c352ff7fd3477fd')
docs=("COPYRIGHT" "HISTORY.rst" "README.html")
build() {
    cd $pkgname-$pkgver
    pandoc -f rst -t html5 -o README.html README.rst || exit
    python3 -m build --wheel --no-isolation
    python3 -m installer --destdir="$PKG" dist/*.whl
}
