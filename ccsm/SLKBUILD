# Packaged by Didier Spaier <didier~at~slint~dot~fr>

pkgname=$(pwd|sed "s,.*/,,")
pkgver=0.8.18
pkgrel=1slint
source=("$pkgname-$pkgver.tar.gz")
docs=("copying" "authors" "news" "license" "license.*" "changes")
options=("nosrcpack")

slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"$pkgname (CompizConfig Settings Manager)"
)

build() {
  cd $SRC/$pkgname-$pkgver || return 1
  python3 setup.py install --prefix=/usr --root=$PKG || return 1
}
