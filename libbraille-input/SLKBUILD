#Packager:Didier Spaier didieratslintdotfr

pkgname=libbraille-input
pkgver=0.9
pkgrel=1slint
#arch=noarch
docs=("README.html" "copying" "authors")
#url=
#dotnew=()
#CFLAGS=
#CXXFLAGS=
#options=('noautodotnew')
# version as in this source package:
# https://launchpad.net/~nalin-x-linux/+archive/ubuntu/libbraille-input/+sourcefiles/libbraille-input/0.9.2-1/libbraille-input_0.9.2-1.debian.tar.xz
slackdesc=\
(
#|-----handy-ruler------------------------------------------------------|
"libbraille-input (Braille input for IBus-Brailleand  S.B.W"
"This engine can convert braille input events to text and call"
"associated callback functions. Here braille input means inputing text"
"in Perkins-like way, i.e. braille patterns. It supports several"
"braille tables, contracted braille and abbreviations."
)
options="nosrcpack"
LIBDIRSUFFIX=64
# Build with python3 -> python3.11
build() {
	git clone https://github.com/zendalona/libbraille-input.git
	cd libbraille-input
	pandoc -f markdown -t html5 README.md -o README.html
  ./autogen.sh
  ./configure \
  --prefix=/usr \
  --libdir=/usr/lib${LIBDIRSUFFIX} \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --disable-static \
  --build=$ARCH-slackware-linux
  make
  make install DESTDIR=$startdir/pkg
    (cd $PKG/usr
  [ -d lib ] && mv lib lib64
  )
  
}
